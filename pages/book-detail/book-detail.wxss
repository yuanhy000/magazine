.container {
    background-color: #f5f5f5;
    width: 100%;
}

.head {
    background-color: #fff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* box-shadow:1px 1px 1px #e3e3e3; */
}

.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}

.shadow {
    color: #999;
}

.author {
    font-size: 28rpx;
    color: #999;
    /* margin-bottom: 30rpx; */
}

.head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.sub-container {
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
}

.comment-container {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    width: 100%;
    flex-wrap: wrap;
    padding: 0 30rpx;
    /* z-index: 999; */
}

.content {
    text-indent: 64rpx;
    color: #333;
    font-weight: 500;
    line-height: 50rpx;
}

.headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}

.comment-container v-tag {
    margin-right: 15rpx;
    margin-bottom: 10rpx;
}

.num {
    margin-left: 10px;
    font-size: 22rpx;
    color: #aaa;
}

.comment-container>v-tag:nth-child(1)>view {
    background-color: #fffbdd;
}

/*even全体元素,odd全奇数元素   子元素选择器方式*/

.comment-container>v-tag:nth-child(2)>view {
    background-color: #eefbff;
}

/*
.ex-tag{
