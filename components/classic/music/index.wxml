<view class="container" hidden="{{hidden}}">
    <image class="classic-img {{playing ? 'rotation' : ''}}" mode="scaleToFill" src="{{img}}">
    </image>
    <image bind:tap="onPlay" class="player-img" mode="scaleToFill" src="{{!playing? playSrc : pauseSrc}}">
    </image>
    <image class="tag" mode="scaleToFill" src="images/music@tag.png">
    </image>
    <text class="content">
        {{content}}
    </text>
</view>